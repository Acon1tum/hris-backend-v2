# =============================================================================
# HRIS Backend Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=3000
NODE_ENV=development

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
PG_PORT=5432
PG_HOST=localhost
PG_USER=postgres
PG_PASSWORD=your_password_here
PG_DATABASE=HRIS
DATABASE_URL="postgresql://${PG_USER}:${PG_PASSWORD}@${PG_HOST}:${PG_PORT}/${PG_DATABASE}?schema=public"

# -----------------------------------------------------------------------------
# JWT Authentication Configuration
# -----------------------------------------------------------------------------
# Generate strong secret keys (minimum 32 characters each)
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="your-jwt-secret-key-here"
JWT_REFRESH_SECRET="your-refresh-token-secret-key-here"

# Token expiration times
JWT_EXPIRES_IN="2h"
JWT_REFRESH_EXPIRES_IN="7d"

# -----------------------------------------------------------------------------
# Session Management
# -----------------------------------------------------------------------------
# Session timeout in seconds (1800 = 30 minutes)
SESSION_TIMEOUT_SECONDS=1800

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
FRONTEND_URL="http://localhost:4200"

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
MAX_FILE_SIZE_MB=10
UPLOAD_DIR="./uploads"

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
# SMTP_HOST="smtp.example.com"
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER="your-email@example.com"
# SMTP_PASS="your-app-password"
# EMAIL_FROM="noreply@yourcompany.com"

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_NUMBERS=true
REQUIRE_SPECIAL_CHARS=true

# -----------------------------------------------------------------------------
# Application Features
# -----------------------------------------------------------------------------
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=false

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL="info"
LOG_FILE_PATH="./logs/app.log"

# -----------------------------------------------------------------------------
# Health Check Configuration
# -----------------------------------------------------------------------------
HEALTH_CHECK_ENABLED=true

# -----------------------------------------------------------------------------
# Development/Testing
# -----------------------------------------------------------------------------
DEBUG=false
DATABASE_LOGGING=false 